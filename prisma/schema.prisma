datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

model config {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id             String      @id @default(uuid())
  gebruikersnaam String      @unique
  name           String
  email          String?     @unique
  emailVerified  DateTime?
  image          String?
  password       String
  salt           String
  theme          Theme?      @default(DARK)
  role           Role        @default(STUDENT)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  loginAllowed   Boolean     @default(true)
  forumBanned    Boolean     @default(false)
  sessions       Session[]
  lists          list[]
  forumPosts     forumPost[]
}

model Session {
  id        String   @id @default(uuid())
  sessionID String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model list {
  id        String     @id @default(uuid())
  name      String
  items     listItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User?      @relation(fields: [userId], references: [id])
  userId    String?
}

model listItem {
  id             String  @id @default(uuid())
  key            String
  value          String
  correctCount   Int     @default(0)
  incorrectCount Int     @default(0)
  list           list?   @relation(fields: [listId], references: [id])
  listId         String?
}

model forumPost {
  id          String      @id @default(uuid())
  title       String
  content     String
  author      User        @relation(fields: [authorId], references: [id])
  authorId    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  reactions   forumPost[]
  forumPost   forumPost?  @relation(fields: [forumPostId], references: [id])
  forumPostId String?
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

enum Theme {
  LIGHT
  DARK
}
